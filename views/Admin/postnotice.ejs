            <!-- Dropdown -->
            <li class="nav-item dropdown mr-auto pr-5">              
              <a class="nav-link dropdown-toggle" id="navbardrop" data-toggle="dropdown"><i class="fad fa-user-circle mr-1"></i>Admin</a>
              <div class="dropdown-menu bg-dark border-0">
                <a class="dropdown-item bg-dark text-white" href="/dashboard"><i class="fad fa-envelope mr-1"></i>Notifications</a>
